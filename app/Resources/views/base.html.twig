<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}DNC Panel{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>

    <link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap.css') }}"/>
    <link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap-theme.css') }}"/>

</head>
<body>
<div class="container">
    {% block navigation %}

        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="{{ path('homepage') }}">DNC</a>
                </div>
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                    </ul>
                </div>

                <form class="navbar-form navbar-left" role="search">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Search">
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </div>
        </nav>



        <ul>
            <li><a href="{{ path('homepage') }}">HomePage</a></li>
            <li><a href="{{ path('process_index') }}">Process</a></li>
            <li><a href="{{ path('machines_index') }}">Machines</a></li>
            <li><a href="{{ path('stocks_index') }}">Stocks</a></li>
        </ul>
    {% endblock %}
    {% block body %}{% endblock %}
</div>
{% block javascripts %}
    <script src="{{ asset('jquery/jquery.js') }}"></script>
    <script src="{{ asset('bootstrap/js/bootstrap.js') }}"></script>
{% endblock %}
</body>
</html>
