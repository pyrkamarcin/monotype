<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <meta http-equiv="refresh" content="60; URL={{ path('terminal_lock') }}">

    <title>{% block title %}Welcome!{% endblock %}</title>

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>

    <link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap.css') }}"/>
    <link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap-theme.css') }}"/>
    <link rel="stylesheet" href="{{ asset('styles/css/main.css') }}"/>

    {% block stylesheets %}{% endblock %}

</head>
<body>
<div class="container">
    {% block navigation %}

        <nav class="navbar navbar-light bg-faded">
            <a class="navbar-brand" href="{{ path('homepage') }}">HOME</a>
            <ul class="nav navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('process_index') }}">Process</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('machines_index') }}">Machines</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('stocks_index') }}">Stocks</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('synchro_index') }}">Sync</a>
                </li>
            </ul>
            <form class="form-inline pull-xs-right">
                <input class="form-control" type="text" placeholder="Search">
                <button class="btn btn-success-outline" type="submit">Search</button>
            </form>
            <ul class="nav navbar-nav form-inline pull-xs-right">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('terminal_lock') }}">Zabezpiecz terminal</a></li>
            </ul>
        </nav>

    {% endblock %}

    {% block body %}{% endblock %}

</div>

<script src="{{ asset('jquery/jquery.js') }}"></script>
<script src="{{ asset('bootstrap/js/bootstrap.js') }}"></script>
{% block javascripts %}{% endblock %}

</body>
</html>
