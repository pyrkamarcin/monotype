{% extends 'base.html.twig' %}

{% block body %}
    <h1>Plan list</h1>

    <table>
        <thead>
        <tr>
            <th>Id</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for plan in plans %}
            <tr>
                <td><a href="{{ path('mamager_plan_show', { 'id': plan.id }) }}">{{ plan.id }}</a></td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('mamager_plan_show', { 'id': plan.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('mamager_plan_edit', { 'id': plan.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('mamager_plan_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
