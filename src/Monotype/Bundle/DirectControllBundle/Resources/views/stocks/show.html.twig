{% extends 'base.html.twig' %}

{% block body %}
    <h1>Stocks</h1>

    <table>
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ stock.id }}</td>
        </tr>
        <tr>
            <th>Hash</th>
            <td>{{ stock.hash }}</td>
        </tr>
        <tr>
            <th>File</th>
            <td>{{ stock.file }}</td>
        </tr>
        <tr>
            <th>Datetime</th>
            <td>{% if stock.datetime %}{{ stock.datetime|date('Y-m-d H:i:s') }}{% endif %}</td>
        </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('manager_stocks_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('manager_stocks_edit', { 'id': stock.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
