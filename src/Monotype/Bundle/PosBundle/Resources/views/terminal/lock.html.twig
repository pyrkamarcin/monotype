{% extends "MonotypePosBundle::base.html.twig" %}

{% block title %}MonotypePosBundle:Terminal:lock{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('styles/css/keyboard.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    {% block navigation %}{% endblock %}

    <div class="container lock">
        <h1 class="text-lg-center display-4">Ekran blokady</h1>
    </div>
    <div class="container lock">
        <div class="card card-block card-secondary-outline">
            <h4 class="card-title text-xs-center">Aby rozpocząć pracę, wprowadź kod pracownika:</h4>
            <p class="card-text text-xs-center text-muted">Możesz wprowadzić kod za pomocą skanera lub ręcznie.</p>
            <form class="card-primary-outline" action="{{ path('terminal_lock') }}" method="post">
                <div class="form-group">
                    <input id="write" type="text" class="form-control card-primary-outline" name="code1"
                           id="fieldcode1"
                           placeholder="wprowadź kod..."
                           autocomplete="off" autofocus>
                </div>
                <div class="form-group">
                    <div id="keyboard" class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
                        <div class="btn-group" role="group" aria-label="">
                            <li type="button" class="number btn btn-info-outline">1</li>
                            <li type="button" class="number btn btn-info-outline">2</li>
                            <li type="button" class="number btn btn-info-outline">3</li>
                            <li type="button" class="number btn btn-info-outline">4</li>
                            <li type="button" class="number btn btn-info-outline">5</li>
                            <li type="button" class="number btn btn-info-outline">6</li>
                            <li type="button" class="number btn btn-info-outline">7</li>
                            <li type="button" class="number btn btn-info-outline">8</li>
                            <li type="button" class="number btn btn-info-outline">9</li>
                            <li type="button" class="number btn btn-info-outline">0</li>
                        </div>
                        <div class="btn-group" role="group" aria-label="">
                            <li type="button" class="delete btn btn-danger-outline">Kasuj</li>
                        </div>
                        <div class="btn-group" role="group" aria-label="">
                            <button type="submit" class="btn btn-primary-outline col-md-12 pull-right">Wprowadź</button>
                        </div>
                    </div>

                </div>
