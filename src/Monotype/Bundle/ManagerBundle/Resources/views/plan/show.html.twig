{% extends 'base.html.twig' %}

{% block body %}
    <h1>Plan</h1>

    <table>
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ plan.id }}</td>
        </tr>
        <tr>
            <th>Ordernumber</th>
            <td>{{ plan.orderNumber }}</td>
        </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('manager_plan_index') }}">Back to the list</a>
