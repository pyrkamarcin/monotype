{% extends 'base.html.twig' %}

{% block body %}
    <h1>Assortment</h1>

    <table class="ui very basic celled table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ assortment.id }}</td>
        </tr>
        <tr>
            <th>Code</th>
            <td>{{ assortment.code }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ assortment.name }}</td>
        </tr>
        <tr>
            <th>Ilość</th>
            <td>{{ assortment.defaultPcsInBox }}</td>
        </tr>
        <tr>
            <th>dateAdd</th>
            <td>{{ assortment.dateAdd|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>dateMod</th>
            <td>{{ assortment.dateMod|date('Y-m-d H:i:s') }}</td>
        </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('manager_assortment_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('manager_assortment_edit', { 'id': assortment.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
