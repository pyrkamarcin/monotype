{% extends 'base.html.twig' %}

{% block body %}
    <h1>Assortment</h1>

    <table>
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ assortment.id }}</td>
        </tr>
        <tr>
            <th>Code</th>
            <td>{{ assortment.code }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ assortment.name }}</td>
        </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('manager_assortment_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('manager_assortment_edit', { 'id': assortment.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
