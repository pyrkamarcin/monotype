{% extends 'base.html.twig' %}

{% block body %}
    <h1>Customer list</h1>

    <table class="ui celled table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Shortname</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td><a href="{{ path('manager_customer_show', { 'id': customer.id }) }}">{{ customer.id }}</a></td>
                <td>{{ customer.name }}</td>
                <td>{{ customer.shortName }}</td>
                <td>{{ customer.description }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('manager_customer_show', { 'id': customer.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('manager_customer_edit', { 'id': customer.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('manager_customer_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
