{% extends 'base.html.twig' %}

{% block body %}
    <h1>Operation</h1>

    <table class="ui very basic celled table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ operation.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ operation.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ operation.description }}</td>
        </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('manager_operation_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('manager_operation_edit', { 'id': operation.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
