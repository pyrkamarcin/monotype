{% extends 'base.html.twig' %}

{% block body %}
    <h1>Operation list</h1>

    <table class="ui celled table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for operation in operations %}
            <tr>
                <td><a href="{{ path('manager_operation_show', { 'id': operation.id }) }}">{{ operation.id }}</a></td>
                <td>{{ operation.name }}</td>
                <td>{{ operation.description }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('manager_operation_show', { 'id': operation.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('manager_operation_edit', { 'id': operation.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('manager_operation_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
